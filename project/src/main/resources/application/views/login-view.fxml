<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SceneController">
   <left>
      <AnchorPane prefHeight="278.0" prefWidth="288.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="321.0" fitWidth="298.0" layoutY="-43.0" pickOnBounds="true" visible="false">
               <image>
                  <Image url="@../../images/background.png" />
               </image>
            </ImageView>
            <ImageView fx:id="loginImage" fitHeight="153.0" fitWidth="182.0" layoutX="93.0" layoutY="-12.0" pickOnBounds="true" preserveRatio="true" style="-fx-opacity: 0.3;">
               <image>
                  <Image url="@../../images/login-icon.png" />
               </image>
               <effect>
                  <ColorAdjust brightness="1.0" />
               </effect>
            </ImageView>
            <Button fx:id="loginButton" layoutX="169.0" layoutY="209.0" mnemonicParsing="false" onAction="#loginButtonOnAction" prefHeight="16.0" prefWidth="104.0" text="Login" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <TextField fx:id="usernameTextField" layoutX="22.0" layoutY="141.0" prefHeight="25.0" prefWidth="255.0" promptText="Username">
