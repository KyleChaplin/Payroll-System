            </TextField>
            <Label fx:id="loginMessageLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="23.0" layoutY="119.0" prefHeight="17.0" prefWidth="255.0" textAlignment="CENTER" textFill="#ff0202" />
            <PasswordField fx:id="passwordTextField" layoutX="22.0" layoutY="174.0" prefHeight="25.0" prefWidth="255.0" promptText="Password">
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor>
            </PasswordField>
            <Label layoutX="69.0" layoutY="254.0" lineSpacing="1.0" text="Copyright (c). All Rights Reserved.">
               <font>
                  <Font size="11.0" />
               </font>
               <effect>
                  <DropShadow blurType="TWO_PASS_BOX" height="15.0" radius="7.0" width="15.0">
                     <color>
                        <Color red="0.28947368264198303" green="0.28947368264198303" blue="0.28947368264198303" />
                     </color>
                  </DropShadow>
               </effect>
            </Label>
            <Label fx:id="lblForgotP" layoutX="29.0" layoutY="214.0" lineSpacing="1.0" prefHeight="16.0" prefWidth="85.0" text="Forgot Password?">
