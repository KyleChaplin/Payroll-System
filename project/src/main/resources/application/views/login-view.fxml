                  <Font name="System Italic" size="11.0" />
               </font>
               <effect>
                  <DropShadow blurType="TWO_PASS_BOX" height="15.0" radius="7.0" width="15.0">
                     <color>
                        <Color red="0.28947368264198303" green="0.28947368264198303" blue="0.28947368264198303" />
                     </color>
                  </DropShadow>
               </effect>
            </Label>
         </children>
